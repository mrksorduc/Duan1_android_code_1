<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.manager.appbanhangadmin.acticity.MuaHangActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_thanh_toan"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_200"
        app:title="Thanh toán" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_thanh_toan"
        android:text="Tong tien"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/tv_tien_thanh_toan"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tien_thanh_toan"
        android:text="SDT"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/tv_Sdt_thanh_toan"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Sdt_thanh_toan"
        android:text="Emai"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/tv_email_thanh_toan"
        android:layout_marginHorizontal="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email_thanh_toan"
        android:layout_marginTop="10dp"
        android:hint="Nhập địa chỉ nhận hàng"
        android:layout_marginHorizontal="15dp"
        android:id="@+id/edt_diaChi_thanh_toan"/>

    <Button
        android:id="@+id/btn_dat_hang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_diaChi_thanh_toan"
        android:layout_margin="15dp"
        android:text="Đặt hàng" />

</RelativeLayout>