<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.manager.appbanhangadmin.acticity.DangNhapActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/edt_email_dang_nhap"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:padding="15dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/edt_pass_dang_nhap"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản?"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tv_dang_ki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng kí ngay."
            android:textColor="@color/teal_200"
            android:textSize="16sp"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:layout_marginHorizontal="25dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginVertical="15dp"
        android:id="@+id/btn_dang_nhap"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#E40D0D"
        android:gravity="center"
        android:id="@+id/tv_quen_pass"/>

</LinearLayout>