<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="android.manager.appbanhangadmin.acticity.SearchActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_tim_kiem"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#C4DAD8"
        app:title="Tìm kiếm sản phẩm"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập sản phẩm cần tìm"
        android:id="@+id/edt_tim_kiem"
        android:layout_margin="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_tim_kiem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp" />

</LinearLayout>